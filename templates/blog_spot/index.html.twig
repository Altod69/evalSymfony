{% extends 'base.html.twig' %}

{% block title %}BlogSpot index{% endblock %}

{% block body %}
    <h1>BlogSpot index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Slug</th>
                <th>Content</th>
                <th>Date</th>
                <th>Category</th>
                <th>Featured</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for blog_spot in blog_spots %}
            <tr>
                <td>{{ blog_spot.id }}</td>
                <td>{{ blog_spot.title }}</td>
                <td>{{ blog_spot.slug }}</td>
                <td>{{ blog_spot.Content }}</td>
                <td>{{ blog_spot.date }}</td>
                <td>{{ blog_spot.category }}</td>
                <td>{{ blog_spot.featured ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('blog_spot_show', {'id': blog_spot.id}) }}">show</a>
                    <a href="{{ path('blog_spot_edit', {'id': blog_spot.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('blog_spot_new') }}">Create new</a>
{% endblock %}
